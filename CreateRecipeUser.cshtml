@model NoCookBooks.Services.Models.RecipeModel

@{
    ViewData["Title"] = "CreateRecipeUser";
}

<h1>Criar Receita</h1>

<h4>Receita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveRecipe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recipe.Id" class="control-label"></label>
                <input asp-for="Recipe.Id" class="form-control" />
                <span asp-validation-for="Recipe.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Name" class="control-label"></label>
                <input asp-for="Recipe.Name" class="form-control" />
                <span asp-validation-for="Recipe.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Description" class="control-label"></label>
                <input asp-for="Recipe.Description" class="form-control" />
                <span asp-validation-for="Recipe.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.MakeRecipe" class="control-label"></label>
                <input asp-for="Recipe.MakeRecipe" class="form-control" />
                <span asp-validation-for="Recipe.MakeRecipe" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Recipe.Favorite" /> @Html.DisplayNameFor(model => model.Recipe.Favorite)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Difficult" class="control-label"></label>
                <input asp-for="Recipe.Difficult" class="form-control" />
                <span asp-validation-for="Recipe.Difficult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Time" class="control-label"></label>
                <input asp-for="Recipe.Time" class="form-control" />
                <span asp-validation-for="Recipe.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.CategoryId" class="control-label"></label>
                <input asp-for="Recipe.CategoryId" class="form-control" />
                <span asp-validation-for="Recipe.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllRecipeUser">Voltar atrás</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

